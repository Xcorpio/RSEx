{
	"name": "RSEx",
	"version": "1.0",
	"manifest_version": 2,

	"description": "RS辅助扩展",
	"icons":{
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},

	"browser_action":{
		"default_icon": "icons/icon19.png",
		"default_popup": "popup.html",
		"default_title": "RSEx"
	},
	
	"content_scripts": [
    {
      "matches": ["http://doufm.info/*"],
      "css": ["assets/doufm.css"],
      "js": ["assets/lib/jquery.min.js", "assets/doufm.js"]
    },
    {
      "matches":["http://rs.xidian.edu.cn/forum.php?mod=viewthread*"],
      "css":["assets/rs.css"],
      "js":["assets/lib/jquery.min.js","assets/rs.js"]
    }
  ],
	"permissions":["http://doufm.info/*",
	               "*://rs.xidian.edu.cn/",
	               "cookies","tabs","storage","alarms"]
}